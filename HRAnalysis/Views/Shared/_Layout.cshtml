    <script>
        $(document).ready(function() {
            // Initialize sidebar as collapsed on page load
            $('#sidebar').addClass('collapsed');
            $('#mainContent').addClass('expanded');
            $('#sidebarToggle').find('i').removeClass('fa-chevron-left').addClass('fa-chevron-right');
            
            // Desktop sidebar toggle
            $('#sidebarToggle').click(function() {
                $('#sidebar').toggleClass('collapsed');
                $('#mainContent').toggleClass('expanded');
                
                // Toggle icon
                const icon = $(this).find('i');
                if ($('#sidebar').hasClass('collapsed')) {
                    icon.removeClass('fa-chevron-left').addClass('fa-chevron-right');
                } else {
                    icon.removeClass('fa-chevron-right').addClass('fa-chevron-left');
                }
            });
            
            // Mobile sidebar toggle
            $('#mobileSidebarToggle').click(function() {
                $('#sidebar').addClass('mobile-show');
                $('#mobileOverlay').addClass('show');
            });
            
            // Close mobile sidebar
            $('#mobileOverlay').click(function() {
                $('#sidebar').removeClass('mobile-show');
                $('#mobileOverlay').removeClass('show');
            });
            
            // Set active nav item based on current page
            const currentPath = window.location.pathname.toLowerCase();
            $('.nav-link').each(function() {
                const href = $(this).attr('href');
                if (href && currentPath.includes(href.toLowerCase())) {
                    $('.nav-link').removeClass('active');
                    $(this).addClass('active');
                }
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
