                <script>
                    $(document).ready(function () {
                        let allRows = [];
                        let filteredRows = [];
                        let currentPage = 1;
                        let rowsPerPage = 10;
                        let currentSort = { column: -1, direction: 'asc' };

                        // Initialize
                        function init() {
                            // Store all rows
                            $('#tableBody tr').each(function () {
                                allRows.push($(this));
                            });
                            filteredRows = [...allRows];
                            updateTable();
                        }

                        // Search functionality
                        $('#searchInput').on('keyup', function () {
                            const searchTerm = $(this).val().toLowerCase();

                            if (searchTerm === '') {
                                filteredRows = [...allRows];
                            } else {
                                filteredRows = allRows.filter(function (row) {
                                    return row.text().toLowerCase().includes(searchTerm);
                                });
                            }

                            currentPage = 1;
                            updateTable();
                        });

                        // Entries per page change
                        $('#entriesSelect').on('change', function () {
                            rowsPerPage = parseInt($(this).val());
                            currentPage = 1;
                            updateTable();
                        });

                        // Sorting functionality
                        $('.sortable').on('click', function () {
                            const column = parseInt($(this).data('column'));

                            if (currentSort.column === column) {
                                currentSort.direction = currentSort.direction === 'asc' ? 'desc' : 'asc';
                            } else {
                                currentSort.column = column;
                                currentSort.direction = 'asc';
                            }

                            // Update sort indicators
                            $('.sortable').removeClass('asc desc');
                            $(this).addClass(currentSort.direction);

                            sortRows();
                            updateTable();
                        });

                        // Sort rows
                        function sortRows() {
                            if (currentSort.column === -1) return;

                            filteredRows.sort(function (a, b) {
                                let aVal = a.find('td').eq(currentSort.column).text().trim();
                                let bVal = b.find('td').eq(currentSort.column).text().trim();

                                // Handle date sorting
                                if (currentSort.column === 5) {
                                    aVal = a.find('td').eq(currentSort.column).data('order') || aVal;
                                    bVal = b.find('td').eq(currentSort.column).data('order') || bVal;
                                }

                                // Handle numeric values
                                if (!isNaN(aVal) && !isNaN(bVal)) {
                                    aVal = parseFloat(aVal);
                                    bVal = parseFloat(bVal);
                                }

                                if (aVal < bVal) return currentSort.direction === 'asc' ? -1 : 1;
                                if (aVal > bVal) return currentSort.direction === 'asc' ? 1 : -1;
                                return 0;
                            });
                        }

                        // Update table display
                        function updateTable() {
                            const totalRows = filteredRows.length;

                            if (totalRows === 0) {
                                $('#tableBody').hide();
                                $('#noResults').show();
                                $('#pagination').empty();
                                $('#tableInfo').text('Showing 0 to 0 of 0 entries');
                                return;
                            }

                            $('#tableBody').show();
                            $('#noResults').hide();

                            // Calculate pagination
                            const totalPages = rowsPerPage === -1 ? 1 : Math.ceil(totalRows / rowsPerPage);
                            const startIndex = rowsPerPage === -1 ? 0 : (currentPage - 1) * rowsPerPage;
                            const endIndex = rowsPerPage === -1 ? totalRows : Math.min(startIndex + rowsPerPage, totalRows);

                            // Clear table body
                            $('#tableBody').empty();

                            // Add visible rows
                            for (let i = startIndex; i < endIndex; i++) {
                                $('#tableBody').append(filteredRows[i]);
                            }

                            // Update info
                            $('#tableInfo').text(`Showing ${startIndex + 1} to ${endIndex} of ${totalRows} entries`);

                            // Update pagination
                            updatePagination(totalPages);
                        }

                        // Update pagination controls
                        function updatePagination(totalPages) {
                            const pagination = $('#pagination');
                            pagination.empty();

                            if (totalPages <= 1) return;

                            // Previous button
                            pagination.append(`
                                        <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                                            <a class="page-link" href="#" data-page="${currentPage - 1}">Previous</a>
                                        </li>
                                    `);

                            // Page numbers
                            let startPage = Math.max(1, currentPage - 2);
                            let endPage = Math.min(totalPages, currentPage + 2);

                            for (let i = startPage; i <= endPage; i++) {
                                pagination.append(`
                                            <li class="page-item ${i === currentPage ? 'active' : ''}">
                                                <a class="page-link" href="#" data-page="${i}">${i}</a>
                                            </li>
                                        `);
                            }

                            // Next button
                            pagination.append(`
                                        <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
                                            <a class="page-link" href="#" data-page="${currentPage + 1}">Next</a>
                                        </li>
                                    `);
                        }

                        // Pagination click handler
                        $(document).on('click', '.page-link', function (e) {
                            e.preventDefault();
                            const page = parseInt($(this).data('page'));
                            if (page && page !== currentPage) {
                                currentPage = page;
                                updateTable();
                            }
                        });

                        // Handle semakan link clicks
                        $(document).on('click', '.semakan-link', function () {
                            var idSemakan = $(this).data('id-semakan');
                            console.log('Semakan ID clicked:', idSemakan);
                            // Add your semakan link click handler here
                        });

                        // Initialize the table
                        init();
                    });
                </script>
                </div>
            </div>
        </div>

}

