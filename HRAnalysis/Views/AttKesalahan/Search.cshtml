@using (Html.BeginForm("Search", "AttKesalahan", FormMethod.Post, new { @class = "mb-4", @id = "searchForm" }))
{
    <div class="row g-3">
        <div class="col-md-3">
            @Html.LabelFor(m => m.SearchIdStaff, "ID Staf", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.SearchIdStaff, new { @class = "form-control", placeholder = "Masukkan ID Staf", @id = "idStaffInput", oninput = "fetchStaffData(this.value)" })
          
        </div>
        <div class="col-md-3">
            @Html.LabelFor(m => m.SearchNama, "Nama", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.SearchNama, new { @class = "form-control", placeholder = "Masukkan Nama Staf", @id = "namaInput" })
        </div>
        <div class="col-md-2">
            @Html.LabelFor(m => m.SearchSyrt, "Syarikat", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.SearchSyrt, (List<SelectListItem>)ViewBag.SyrtList, new { @class = "form-select", @id = "syarikatDropdown", onchange = "updateNamaList()" })
        </div>
        <div class="col-md-2">
            @Html.LabelFor(m => m.SearchJab, "Jabatan", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.SearchJab, (List<SelectListItem>)ViewBag.JabList, new { @class = "form-select", @id = "jabatanDropdown", onchange = "updateNamaList()" })
        </div>
        <div class="col-md-2">
            @Html.LabelFor(m => m.SearchBhgn, "Bahagian", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.SearchBhgn, (List<SelectListItem>)ViewBag.BhgnList, new { @class = "form-select", @id = "bahagianDropdown", onchange = "updateNamaList()" })
        </div>
    </div>

    <div class="row g-3 mt-3">
        <div class="col-md-2">
            <label class="form-label">Tarikh Dari</label>
            <input type="date" name="DateFrom" id="dateFrom" class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Tarikh Hingga</label>
            <input type="date" name="DateTo" id="dateTo" class="form-control" />
        </div>

        <script>
            // On page load
            window.onload = function () {
                const from = localStorage.getItem('dateFrom');
                const to = localStorage.getItem('dateTo');

                if (from) document.getElementById('dateFrom').value = from;
                else document.getElementById('dateFrom').value = new Date().toISOString().split('T')[0];

                if (to) document.getElementById('dateTo').value = to;
                else document.getElementById('dateTo').value = new Date().toISOString().split('T')[0];
            };

            // On input change
            document.getElementById('dateFrom').addEventListener('change', function () {
                localStorage.setItem('dateFrom', this.value);
            });

            document.getElementById('dateTo').addEventListener('change', function () {
                localStorage.setItem('dateTo', this.value);
            });
        </script>

        <!-- Nama Staf Multi-select with Search -->
        <div class="col-md-6">
            <label class="form-label">Nama Staf</label>
            <!-- Row: Search + Buttons in one row -->
            <div class="row g-2 align-items-center">
                <!-- Search Box -->
                <div class="col-6">
                    <input type="text" id="userSearchBox" class="form-control" placeholder="Cari nama staf..." onkeyup="filterUsers()" />
                </div>

                <!-- Buttons beside search -->
                <div class="col-2">
                    <button type="button" class="btn btn-sm btn-outline-primary w-100" onclick="selectAllUsers()">Pilih Semua</button>
                </div>
                <div class="col-2">
                    <button type="button" class="btn btn-sm btn-outline-secondary w-100" onclick="clearAllUsers()">Kosongkan</button>
                </div>
                <div class="col-2">
                    <button type="button" class="btn btn-sm btn-outline-info w-100" onclick="toggleStaffList()" id="toggleStaffBtn">
                        <i class="fas fa-eye"></i> Paparkan
                    </button>
                </div>
            </div>

            <!-- Selected Users Info -->
            <div id="selectedUsersDisplay" class="mt-2" style="display: none;"></div>


            <input type="hidden" name="SelectedRecordId" value="@Model.SelectedRecordId" />


            <!-- Checkbox List -->
            <div class="border p-2 mt-2" style="max-height: 300px; overflow-y: auto; display: none;" id="namaCheckboxList">
                @if (ViewBag.NamaList != null)
                {
                    foreach (var item in (List<SelectListItem>)ViewBag.NamaList)
                    {
                        var isSelected = Model.SelectedUserIds != null && Model.SelectedUserIds.Contains(item.Value);
                        <div class="form-check user-checkbox-item" data-name="@item.Text.ToLower()">
                            <input class="form-check-input user-checkbox" type="checkbox" name="SelectedUserIds" value="@item.Value" id="nama_@item.Value" onchange="updateSelectedDisplay()" @(isSelected ? "checked" : "") />
                            <label class="form-check-label" for="nama_@item.Value">
                                <strong>@item.Value</strong> - @item.Text
                            </label>
                        </div>
                    }
                }
                else
                {
                    <div class="text-muted">Tiada data nama tersedia</div>
                }
            </div>
        </div>
    </div>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    let staffDataTimeout;

    $(document).ready(function () {
        $('#syarikatDropdown, #jabatanDropdown, #bahagianDropdown').on('change', function () {
            updateAllDropdowns();
        });

        // Initialize selected display
        updateSelectedDisplay();
    });

    // New function to fetch staff data by ID
    function fetchStaffData(idStaff) {
        // Clear previous timeout
        if (staffDataTimeout) {
            clearTimeout(staffDataTimeout);
        }

        // Hide previous results
        hideStaffInfo();

        // Don't search if input is empty or too short
        if (!idStaff || idStaff.trim().length < 2) {
            return;
        }

        // Show loading indicator
        $('#idStaffLoading').show();

        // Set timeout to avoid too many requests
        staffDataTimeout = setTimeout(function () {
            $.ajax({
                url: '@Url.Action("GetStaffById", "AttKesalahan")',
                type: 'GET',
                data: { idStaff: idStaff.trim() },
                success: function (data) {
                    $('#idStaffLoading').hide();

                    if (data.success && data.staff) {
                        displayStaffInfo(data.staff);
                        // Optional: Auto-fill other fields
                        autoFillFields(data.staff);
                    } else {
                        showStaffError(data.message || 'ID Staf tidak dijumpai');
                    }
                },
                error: function () {
                    $('#idStaffLoading').hide();
                    showStaffError('Ralat semasa mencari data staf');
                }
            });
        }, 500); // 500ms delay
    }

    function displayStaffInfo(staff) {
        $('#staffNama').text(staff.nama || '-');
        $('#staffSyarikat').text(staff.syarikat || '-');
        $('#staffJabatan').text(staff.jabatan || '-');
        $('#staffBahagian').text(staff.bahagian || '-');
        $('#staffInfoDisplay').show();
        $('#staffErrorDisplay').hide();
    }

    function showStaffError(message) {
        $('#staffErrorMessage').text(message);
        $('#staffErrorDisplay').show();
        $('#staffInfoDisplay').hide();
    }

    function hideStaffInfo() {
        $('#staffInfoDisplay').hide();
        $('#staffErrorDisplay').hide();
        $('#idStaffLoading').hide();
    }

    function autoFillFields(staff) {
        // Auto-fill name field
        if (staff.nama) {
            $('#namaInput').val(staff.nama);
        }

        // Auto-select dropdowns if values exist
        if (staff.syarikat) {
            $('#syarikatDropdown').val(staff.syarikat);
        }
        if (staff.jabatan) {
            $('#jabatanDropdown').val(staff.jabatan);
        }
        if (staff.bahagian) {
            $('#bahagianDropdown').val(staff.bahagian);
        }

        // Trigger change event to update dependent dropdowns
        $('#syarikatDropdown, #jabatanDropdown, #bahagianDropdown').trigger('change');
    }

    function updateAllDropdowns() {
        var selectedSyrt = $('#syarikatDropdown').val();
        var selectedJab = $('#jabatanDropdown').val();
        var selectedBhgn = $('#bahagianDropdown').val();

        $.ajax({
            url: '@Url.Action("GetFilteredData", "AttKesalahan")',
            type: 'GET',
            data: {
                syarikat: selectedSyrt,
                jabatan: selectedJab,
                bahagian: selectedBhgn
            },
            success: function (data) {
                updateDropdown('#syarikatDropdown', data.syarikatList, selectedSyrt);
                updateDropdown('#jabatanDropdown', data.jabatanList, selectedJab);
                updateDropdown('#bahagianDropdown', data.bahagianList, selectedBhgn);
                updateNameCheckboxList(data.namaList);
            }
        });
    }

    function updateDropdown(dropdownId, dataList, selectedValue) {
        var $dropdown = $(dropdownId);
        $dropdown.empty();
        $dropdown.append($('<option>').val('').text('-- Pilih --'));

        $.each(dataList, function (index, item) {
            $dropdown.append($('<option>').val(item.value).text(item.text));
        });

        if (selectedValue) {
            $dropdown.val(selectedValue);
        }
    }

    function updateNameCheckboxList(namaList) {
        var $container = $('#namaCheckboxList');
        $container.empty();

        $.each(namaList, function (index, item) {
            var checkboxHtml =
                '<div class="form-check user-checkbox-item" data-name="' + item.text.toLowerCase() + '">' +
                '<input class="form-check-input user-checkbox" type="checkbox" name="SelectedUserIds" value="' + item.value + '" id="nama_' + item.value + '" onchange="updateSelectedDisplay()" />' +
                '<label class="form-check-label" for="nama_' + item.value + '">' +
                '<strong>' + item.value + '</strong> - ' + item.text +
                '</label>' +
                '</div>';
            $container.append(checkboxHtml);
        });

        updateSelectedDisplay();
    }

    function filterUsers() {
        var searchText = document.getElementById('userSearchBox').value.toLowerCase();
        var checkboxItems = document.querySelectorAll('.user-checkbox-item');

        checkboxItems.forEach(function (item) {
            var name = item.getAttribute('data-name');
            if (name.includes(searchText)) {
                item.style.display = 'block';
            } else {
                item.style.display = 'none';
            }
        });
    }

    function selectAllUsers() {
        var visibleCheckboxes = document.querySelectorAll('.user-checkbox-item:not([style*="display: none"]) .user-checkbox');
        visibleCheckboxes.forEach(function (checkbox) {
            checkbox.checked = true;
        });
        updateSelectedDisplay();
    }

    function clearAllUsers() {
        var checkboxes = document.querySelectorAll('.user-checkbox');
        checkboxes.forEach(function (checkbox) {
            checkbox.checked = false;
        });
        updateSelectedDisplay();
    }

    function toggleStaffList() {
        var staffList = document.getElementById('namaCheckboxList');
        var toggleBtn = document.getElementById('toggleStaffBtn');

        if (staffList.style.display === 'none') {
            staffList.style.display = 'block';
            toggleBtn.innerHTML = '<i class="fas fa-eye-slash"></i> Sembunyikan';
        } else {
            staffList.style.display = 'none';
            toggleBtn.innerHTML = '<i class="fas fa-eye"></i> Paparkan';
        }
    }

    function updateSelectedDisplay() {
        var selectedCheckboxes = document.querySelectorAll('.user-checkbox:checked');
        var selectedCount = selectedCheckboxes.length;
        var selectedDisplay = document.getElementById('selectedUsersDisplay');
        var selectedCountElement = document.getElementById('selectedCount');
        var selectedUsersList = document.getElementById('selectedUsersList');

        if (selectedCountElement) {
            selectedCountElement.textContent = selectedCount;
        }

        if (selectedCount > 0) {
            selectedDisplay.style.display = 'block';
            var selectedNames = [];
            selectedCheckboxes.forEach(function (checkbox) {
                var label = document.querySelector('label[for="' + checkbox.id + '"]');
                if (label) {
                    selectedNames.push(label.textContent.trim());
                }
            });
            if (selectedUsersList) {
                selectedUsersList.innerHTML = selectedNames.join(', ');
            }
        } else {
            selectedDisplay.style.display = 'none';
        }
    }

    // Form submission with loading state
    $('#searchForm').on('submit', function () {
        $('#searchBtn .btn-text').addClass('d-none');
        $('#searchBtn .spinner-border').removeClass('d-none');
        $('#searchBtn').prop('disabled', true);
    });

    function resetForm() {
        // Reset input fields
        $('#idStaffInput').val('');
        $('#namaInput').val('');
        $('#userSearchBox').val('');

        // Reset dropdowns
        $('#syarikatDropdown').val('');
        $('#jabatanDropdown').val('');
        $('#bahagianDropdown').val('');

        // Reset date fields to today
        const today = new Date().toISOString().split('T')[0];
        $('input[name="DateFrom"]').val(today);
        $('input[name="DateTo"]').val(today);

        // Uncheck all checkboxes
        $('.user-checkbox').prop('checked', false);

        // Hide selected user display and checkbox list
        $('#selectedUsersDisplay').hide();
        $('#namaCheckboxList').hide();
        $('#toggleStaffBtn').html('<i class="fas fa-eye"></i> Paparkan');

        // Hide staff info and error display
        hideStaffInfo();
    }

</script>

