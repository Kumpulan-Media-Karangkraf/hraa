<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Initialize both tables (your existing code)
        initializeTable('attendance');
        initializeTable('kesalahan');

        const prosesForm = document.getElementById('prosesForm');
        const prosesBtn = document.getElementById('prosesBtn');

        if (prosesForm && prosesBtn) {
            prosesForm.addEventListener('submit', function (e) {
                showButtonLoading(prosesBtn);
                showGlobalLoading();

                const progressStatus = document.getElementById('progressStatus');
                const selectedUserInputs = document.querySelectorAll('input[name="SelectedUserIds"]:checked');
                const idStaffInput = document.getElementById('idStaffInput');
                const idStaffValue = idStaffInput ? idStaffInput.value.trim() : "";
                const userCount = selectedUserInputs.length;

                if (userCount > 0) {

                    let current = 1;
                    progressStatus.textContent = `${current} daripada ${userCount} pengguna telah diproses...`;

                    const interval = setInterval(() => {
                        current++;
                        if (current > userCount) {
                            clearInterval(interval);
                            progressStatus.textContent = `Kesemua ${userCount} pengguna telah diproses.`;
                        } else {
                            progressStatus.textContent = `${current} daripada ${userCount} pengguna telah siap diproses...`;
                        }
                    }, 1000);
                } else if (idStaffValue !== "") {
                    // ✅ Only one user via ID Staff input
                    progressStatus.textContent = `1 pengguna telah dipilih...`;
                } else {
                    // ❌ No user selected
                    progressStatus.textContent = `Tiada pengguna yang telah dipilih.`;
                }
            });
        }

    });

    function showGlobalLoading() {
        document.getElementById('globalLoading').classList.remove('hidden');
    }

    function hideGlobalLoading() {
        document.getElementById('globalLoading').classList.add('hidden');
    }

    function showButtonLoading(button) {
        button.classList.add('btn-loading');
        button.disabled = true;

        const spinner = button.querySelector('.spinner-border');
        const text = button.querySelector('.btn-text');

        if (spinner) spinner.classList.remove('d-none');
        if (text) text.style.opacity = '0';
    }

    function hideButtonLoading(button) {
        button.classList.remove('btn-loading');
        button.disabled = false;

        const spinner = button.querySelector('.spinner-border');
        const text = button.querySelector('.btn-text');

        if (spinner) spinner.classList.add('d-none');
        if (text) text.style.opacity = '1';
    }

    // For AJAX requests (if you want to use AJAX instead of form submission)
    function performAjaxSearch() {
        const formData = new FormData(document.getElementById('searchForm'));

        showGlobalLoading();
        showButtonLoading(document.getElementById('searchBtn'));

        fetch('/AttKesalahan/Search', {
            method: 'POST',
            body: formData
        })
            .then(response => response.text())
            .then(html => {
                // Update the page content with the returned HTML
                document.body.innerHTML = html;
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while searching. Please try again.');
            })
            .finally(() => {
                hideGlobalLoading();
                hideButtonLoading(document.getElementById('searchBtn'));
            });
    }


    function initializeTable(tableType) {
        const table = document.getElementById(tableType + 'Table');
        const tbody = document.getElementById(tableType + 'TableBody');
        const searchInput = document.getElementById(tableType + 'TableSearch');
        const entriesSelect = document.getElementById(tableType + 'EntriesPerPage');
        const tableInfo = document.getElementById(tableType + 'TableInfo');
        const pagination = document.getElementById(tableType + 'Pagination');

        if (!table || !tbody) return;

        let allRows = Array.from(tbody.querySelectorAll('tr'));
        let filteredRows = [...allRows];
        let currentPage = 1;
        let entriesPerPage = 10;
        let sortColumn = -1;
        let sortDirection = 'asc';

        // Additional filter for attendance table
        const statusFilter = tableType === 'attendance' ? document.getElementById('statusFilter') : null;
        // Additional filter for kesalahan table
        const jenisFilter = tableType === 'kesalahan' ? document.getElementById('jenisFilter') : null;

        // Search functionality
        if (searchInput) {
            searchInput.addEventListener('input', function () {
                filterTable();
            });
        }

        // Entries per page
        if (entriesSelect) {
            entriesSelect.addEventListener('change', function () {
                entriesPerPage = parseInt(this.value);
                currentPage = 1;
                displayTable();
            });
        }

        // Additional filters
        if (statusFilter) {
            statusFilter.addEventListener('change', function () {
                filterTable();
            });
        }

        if (jenisFilter) {
            jenisFilter.addEventListener('change', function () {
                filterTable();
            });
        }

        // Sort functionality
        document.querySelectorAll('.' + tableType + '-sort-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                const column = parseInt(this.dataset.column);
                if (sortColumn === column) {
                    sortDirection = sortDirection === 'asc' ? 'desc' : 'asc';
                } else {
                    sortColumn = column;
                    sortDirection = 'asc';
                }

                // Update sort icons for this table only
                document.querySelectorAll('.' + tableType + '-sort-btn i').forEach(icon => {
                    icon.className = 'fas fa-sort';
                });
                this.querySelector('i').className = sortDirection === 'asc' ? 'fas fa-sort-up' : 'fas fa-sort-down';

                sortTable();
            });
        });

        function filterTable() {
            const searchTerm = searchInput ? searchInput.value.toLowerCase() : '';

            filteredRows = allRows.filter(row => {
                const text = row.textContent.toLowerCase();
                const matchesSearch = !searchTerm || text.includes(searchTerm);
                let matchesFilter = true;

                // Attendance filter
                if (tableType === 'attendance' && statusFilter) {
                    const statusValue = statusFilter.value;
                    if (statusValue) {
                        const statusIn = row.dataset.statusIn;
                        const statusOut = row.dataset.statusOut;
                        matchesFilter = statusIn === statusValue || statusOut === statusValue;
                    }
                }

                // Kesalahan filter
                if (tableType === 'kesalahan' && jenisFilter) {
                    const jenisValue = jenisFilter.value;
                    if (jenisValue) {
                        if (jenisValue === 'Masalah Belum Dikenalpasti') {
                            // Special case for unidentified issues
                            const excludeValue = row.dataset.exclude;
                            const idSemakanValue = row.dataset.idSemakan;

                            // Check if both Exclude is null/false AND IdSemakan is null/empty
                            const excludeIsNullOrFalse = (
                                excludeValue === 'null' ||
                                excludeValue === '' ||
                                excludeValue === 'false' ||
                                excludeValue === undefined ||
                                excludeValue === 'undefined' ||
                                !excludeValue
                            );

                            const idSemakanIsNullOrEmpty = (
                                idSemakanValue === '' ||
                                idSemakanValue === 'null' ||
                                idSemakanValue === undefined ||
                                idSemakanValue === 'undefined' ||
                                !idSemakanValue
                            );

                            // Show rows where BOTH conditions are true (no semakan processing done)
                            matchesFilter = excludeIsNullOrFalse && idSemakanIsNullOrEmpty;

                        } else {
                            // Get the actual jenis kesalahan from the data attribute
                            const jenis = row.dataset.jenis;
                            matchesFilter = jenis === jenisValue;
                        }
                    }
                }

                return matchesSearch && matchesFilter;
            });

            currentPage = 1;
            displayTable();
        }

        function sortTable() {
            filteredRows.sort((a, b) => {
                let aVal = a.cells[sortColumn].textContent.trim();
                let bVal = b.cells[sortColumn].textContent.trim();

                // Handle date sorting (column 5 - Date)
                if (sortColumn === 5) {
                    aVal = a.dataset.date || aVal;
                    bVal = b.dataset.date || bVal;
                }

                // Handle numeric sorting for ID columns (0 - ID, 8 - ID Semakan)
                if (sortColumn === 0 || sortColumn === 8) {
                    // For ID Semakan, use the data attribute value
                    if (sortColumn === 8) {
                        aVal = a.dataset.idSemakan || '';
                        bVal = b.dataset.idSemakan || '';
                        // Convert to number if it's a valid number, otherwise treat as string
                        const aNum = parseInt(aVal);
                        const bNum = parseInt(bVal);
                        if (!isNaN(aNum) && !isNaN(bNum)) {
                            aVal = aNum;
                            bVal = bNum;
                        }
                    } else {
                        aVal = parseInt(aVal) || 0;
                        bVal = parseInt(bVal) || 0;
                    }
                }

                // Handle Jenis Kesalahan sorting (column 6)
                if (sortColumn === 6) {
                    // Extract text from badge spans for proper sorting
                    const aBadge = a.cells[sortColumn].querySelector('.badge');
                    const bBadge = b.cells[sortColumn].querySelector('.badge');
                    aVal = aBadge ? aBadge.textContent.trim() : aVal;
                    bVal = bBadge ? bBadge.textContent.trim() : bVal;
                }

                // Perform comparison
                if (typeof aVal === 'number' && typeof bVal === 'number') {
                    return sortDirection === 'asc' ? aVal - bVal : bVal - aVal;
                } else {
                    // String comparison
                    aVal = String(aVal).toLowerCase();
                    bVal = String(bVal).toLowerCase();

                    if (aVal < bVal) return sortDirection === 'asc' ? -1 : 1;
                    if (aVal > bVal) return sortDirection === 'asc' ? 1 : -1;
                    return 0;
                }
            });

            displayTable();
        }

        function displayTable() {
            if (!tbody) return;

            // Clear tbody
            tbody.innerHTML = '';

            // Calculate pagination
            const totalRows = filteredRows.length;
            const totalPages = entriesPerPage === -1 ? 1 : Math.ceil(totalRows / entriesPerPage);
            const startIndex = entriesPerPage === -1 ? 0 : (currentPage - 1) * entriesPerPage;
            const endIndex = entriesPerPage === -1 ? totalRows : Math.min(startIndex + entriesPerPage, totalRows);

            // Display rows
            for (let i = startIndex; i < endIndex; i++) {
                if (filteredRows[i]) {
                    tbody.appendChild(filteredRows[i].cloneNode(true));
                }
            }

            // Update info
            if (tableInfo) {
                tableInfo.textContent = `Showing ${startIndex + 1} to ${endIndex} of ${totalRows} entries`;
            }

            // Update pagination
            updatePagination(totalPages);
        }

        function updatePagination(totalPages) {
            if (!pagination) return;

            pagination.innerHTML = '';

            if (totalPages <= 1) return;

            // Previous button
            const prevLi = document.createElement('li');
            prevLi.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
            prevLi.innerHTML = '<a class="page-link" href="#">Previous</a>';
            prevLi.addEventListener('click', function (e) {
                e.preventDefault();
                if (currentPage > 1) {
                    currentPage--;
                    displayTable();
                }
            });
            pagination.appendChild(prevLi);

            // Page numbers (show max 5 pages)
            const maxPagesToShow = 5;
            let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
            let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);

            if (endPage - startPage + 1 < maxPagesToShow) {
                startPage = Math.max(1, endPage - maxPagesToShow + 1);
            }

            for (let i = startPage; i <= endPage; i++) {
                const li = document.createElement('li');
                li.className = `page-item ${i === currentPage ? 'active' : ''}`;
                li.innerHTML = `<a class="page-link" href="#">${i}</a>`;
                li.addEventListener('click', function (e) {
                    e.preventDefault();
                    currentPage = i;
                    displayTable();
                });
                pagination.appendChild(li);
            }

            // Next button
            const nextLi = document.createElement('li');
            nextLi.className = `page-item ${currentPage === totalPages ? 'disabled' : ''}`;
            nextLi.innerHTML = '<a class="page-link" href="#">Next</a>';
            nextLi.addEventListener('click', function (e) {
                e.preventDefault();
                if (currentPage < totalPages) {
                    currentPage++;
                    displayTable();
                }
            });
            pagination.appendChild(nextLi);
        }

        // Initial display
        displayTable();
    }
</script>